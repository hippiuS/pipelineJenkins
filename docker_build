#!groovy
properties([disableConcurrentBuilds()])
pipeline {
    agent { 
        label 'master'
        }
    triggers { pollSCM('* * * * *') }
    options {
         buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
         timestamps()
            }
    stages {
        stage("Second step") {
            steps {
                dir('pipe') { 
                    sh 'docker build -t box:latest . '
                }
            }
        }
        stage("Third step") {
            steps {
                sh 'ssh root@ansible \'ls -la /etc\''
            }
        }
    }
}
