#!groovy
properties([disableConcurrentBuilds()])
pipeline {
    agent { 
        label 'master'
        }
    triggers { pollSCM('* * * * *') }
    options {
         buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
         timestamps()
            }
    stages {
        stage("Docker login") {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub_hippius', usernameVariable: 'USERNAME', passwordVariable: "PASSWORD")]) {
                    sh "docker login -u $USERNAME -p $PASSWORD"
                }
            }
        }
        stage("Docker build") {
            steps {
                dir('pipe') { 
                    sh 'docker build -t hippiuS/box:latest . '
                }
            }
        }
        stage("Docker push") {
            steps {
                sh 'docker push hippius/box:latest'
            }
        }
    }
}
